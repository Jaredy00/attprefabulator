extends layout


block layout-content
    div.View
        h1.Banner Prefabulator
        div.Message
            h3 ATT Login
            hr
            form(method='POST' action='/login')
                #error
                    if error
                        p.text-danger #{error}
                div.form-group
                    label(for='username') Username:
                    input#username.form-control(type="text", placeholder="ATT Username", name="username")
                div.form-group
                    label(for='password') Password:
                    input#password.form-control(type="password", name="password")
                button.btn.btn-primary(type="submit") Login



                